{{# each products}}
    <div class="row">
        {{# each this}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath}}" alt="image" class="img-responsive img-thumbnail">
                    <div class="caption text-center">
                        <h3 class="title">{{ this.title}}</h3>
                        <p class="description">{{ this.description}}</p>
                        <div class="clearfix">
                            <!--<div class="price pull-left">KES {{ this.price}}</div>-->
                            {{> purchase}}
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}